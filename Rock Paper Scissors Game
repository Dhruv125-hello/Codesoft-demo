import tkinter as tk
from tkinter import ttk
import random

# Main Window
root = tk.Tk()
root.title("Rock Paper Scissors - Pro Edition")
root.geometry("450x600")
root.resizable(False, False)

# Game Data
choices = ["Rock", "Paper", "Scissors"]
player_score = 0
computer_score = 0
history = []

# --- Functions ---
def get_result(player, computer):
    if player == computer:
        return "Draw ğŸ¤"
    if (player == "Rock" and computer == "Scissors") or \
       (player == "Paper" and computer == "Rock") or \
       (player == "Scissors" and computer == "Paper"):
        return "You Win ğŸ‰"
    return "Computer Wins ğŸ’»"

def play(player_choice):
    computer_choice = random.choice(choices)
    result = get_result(player_choice, computer_choice)

    update_game(player_choice, computer_choice, result)

def update_game(player_choice, computer_choice, result):
    global player_score, computer_score

    if "Win" in result and "You" in result:
        player_score += 1
    elif "Computer" in result:
        computer_score += 1

    # Update display
    result_label.config(text=f"{result}")
    player_label.config(text=f"ğŸ§ Player: {player_choice}")
    computer_label.config(text=f"ğŸ’» Computer: {computer_choice}")
    score_label.config(text=f"Score: You {player_score} | Computer {computer_score}")

    # Add to history
    history.append(f"ğŸ§ {player_choice} vs ğŸ’» {computer_choice} â†’ {result}")
    update_history()

    # Enable play again
    play_again_btn.config(state=tk.NORMAL)

def update_history():
    history_text.config(state=tk.NORMAL)
    history_text.delete(1.0, tk.END)
    for entry in history[-10:][::-1]:  # Last 10 rounds
        history_text.insert(tk.END, entry + "\n")
    history_text.config(state=tk.DISABLED)

def reset_game():
    global player_score, computer_score, history
    player_score = 0
    computer_score = 0
    history = []
    player_label.config(text="ğŸ§ Player: -")
    computer_label.config(text="ğŸ’» Computer: -")
    result_label.config(text="Result: -")
    score_label.config(text="Score: You 0 | Computer 0")
    update_history()
    play_again_btn.config(state=tk.DISABLED)

def play_again():
    result_label.config(text="Result: -")
    player_label.config(text="ğŸ§ Player: -")
    computer_label.config(text="ğŸ’» Computer: -")
    play_again_btn.config(state=tk.DISABLED)

# --- UI Layout ---
ttk.Label(root, text="Rock Paper Scissors", font=("Helvetica", 18, "bold")).pack(pady=10)

score_label = ttk.Label(root, text="Score: You 0 | Computer 0", font=("Helvetica", 13))
score_label.pack(pady=5)

player_label = ttk.Label(root, text="ğŸ§ Player: -", font=("Helvetica", 13))
player_label.pack(pady=5)

computer_label = ttk.Label(root, text="ğŸ’» Computer: -", font=("Helvetica", 13))
computer_label.pack(pady=5)

result_label = ttk.Label(root, text="Result: -", font=("Helvetica", 14, "bold"), foreground="blue")
result_label.pack(pady=10)

# Buttons Frame
btn_frame = ttk.Frame(root)
btn_frame.pack(pady=15)

ttk.Button(btn_frame, text="ğŸª¨ Rock", command=lambda: play("Rock")).grid(row=0, column=0, padx=10)
ttk.Button(btn_frame, text="ğŸ“„ Paper", command=lambda: play("Paper")).grid(row=0, column=1, padx=10)
ttk.Button(btn_frame, text="âœ‚ï¸ Scissors", command=lambda: play("Scissors")).grid(row=0, column=2, padx=10)

# Play Again & Reset
play_again_btn = ttk.Button(root, text="ğŸ” Play Again", command=play_again, state=tk.DISABLED)
play_again_btn.pack(pady=10)

reset_btn = ttk.Button(root, text="ğŸ§¹ Reset Game", command=reset_game)
reset_btn.pack(pady=5)

# History Label
ttk.Label(root, text="Last 10 Rounds", font=("Helvetica", 12, "bold")).pack(pady=10)

# History Text Box
history_text = tk.Text(root, height=10, width=50, state=tk.DISABLED, wrap=tk.WORD, bg="#f5f5f5")
history_text.pack(pady=5)

# Run Application
root.mainloop()
