import tkinter as tk
from tkinter import ttk
import random

# Main window
root = tk.Tk()
root.title("Rock Paper Scissors Game")
root.geometry("400x550")
root.resizable(False, False)

# Style
style = ttk.Style()
style.configure("TButton", font=("Helvetica", 12), padding=10)
style.configure("TLabel", font=("Helvetica", 12))

# Game Variables
choices = ["Rock", "Paper", "Scissors"]
player_score = 0
computer_score = 0
history = []

# Functions
def play(player_choice):
    global player_score, computer_score

    computer_choice = random.choice(choices)
    result = ""

    if player_choice == computer_choice:
        result = "It's a Tie üòê"
    elif (player_choice == "Rock" and computer_choice == "Scissors") or \
         (player_choice == "Scissors" and computer_choice == "Paper") or \
         (player_choice == "Paper" and computer_choice == "Rock"):
        player_score += 1
        result = "You Win üéâ"
    else:
        computer_score += 1
        result = "Computer Wins ü§ñ"

    update_ui(player_choice, computer_choice, result)

def update_ui(player_choice, computer_choice, result):
    result_label.config(text=f"Result: {result}")
    player_label.config(text=f"Player chose: {player_choice}")
    computer_label.config(text=f"Computer chose: {computer_choice}")
    score_label.config(text=f"Score - You: {player_score}  Computer: {computer_score}")
    history.append(f"You: {player_choice} | Computer: {computer_choice} ‚Üí {result}")
    update_history()

def update_history():
    history_text.config(state=tk.NORMAL)
    history_text.delete(1.0, tk.END)
    for entry in history[-10:][::-1]:  # Show last 10 rounds
        history_text.insert(tk.END, entry + "\n")
    history_text.config(state=tk.DISABLED)

def reset_game():
    global player_score, computer_score, history
    player_score = 0
    computer_score = 0
    history = []
    result_label.config(text="Result:")
    player_label.config(text="Player chose:")
    computer_label.config(text="Computer chose:")
    score_label.config(text="Score - You: 0  Computer: 0")
    update_history()

# GUI Layout
ttk.Label(root, text="Rock Paper Scissors", font=("Helvetica", 16, "bold")).pack(pady=10)

score_label = ttk.Label(root, text="Score - You: 0  Computer: 0")
score_label.pack(pady=5)

player_label = ttk.Label(root, text="Player chose:")
player_label.pack(pady=5)

computer_label = ttk.Label(root, text="Computer chose:")
computer_label.pack(pady=5)

result_label = ttk.Label(root, text="Result:")
result_label.pack(pady=5)

# Buttons Frame
button_frame = ttk.Frame(root)
button_frame.pack(pady=10)

ttk.Button(button_frame, text="Rock ü™®", command=lambda: play("Rock")).grid(row=0, column=0, padx=5)
ttk.Button(button_frame, text="Paper üìÑ", command=lambda: play("Paper")).grid(row=0, column=1, padx=5)
ttk.Button(button_frame, text="Scissors ‚úÇÔ∏è", command=lambda: play("Scissors")).grid(row=0, column=2, padx=5)

# History
ttk.Label(root, text="Game History (Last 10 Rounds):").pack(pady=10)
history_text = tk.Text(root, height=10, width=45, state=tk.DISABLED, bg="#f0f0f0", wrap=tk.WORD)
history_text.pack(pady=5)

# Reset Button
ttk.Button(root, text="Reset Game üîÑ", command=reset_game).pack(pady=10)

# Start GUI Loop
root.mainloop()
